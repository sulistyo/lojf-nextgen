  <script src="https://unpkg.com/htmx.org@1.9.12"></script>
</head>
<body class="bg-gray-50 text-gray-900">
  {{template "navbar" .}}
  <main class="max-w-6xl mx-auto p-6">
    {{template "content" .}}
  </main>
  {{template "footer" .}}
</body>
</html>
{{end}}
