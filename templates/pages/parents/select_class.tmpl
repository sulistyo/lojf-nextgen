{{define "content"}}
<h1 class="text-2xl font-bold mb-4">Select Class for {{.Child.Name}}</h1>

{{template "flash" .}}

<form method="POST" action="/register/classes" class="grid gap-4 max-w-xl bg-white p-6 rounded-2xl border">
  <input type="hidden" name="child_id" value="{{.Child.ID}}">
  <div class="space-y-2">
    {{if .ClassOptions}}
      {{range .ClassOptions}}
      <label class="flex items-start gap-3 p-3 border rounded-xl">
        <input type="radio" name="class_id" value="{{.ID}}" required>
        <div class="flex-1">
          <div class="font-medium">{{.Name}}</div>
          <div class="text-sm text-gray-600">{{.DateStr}}</div>
          {{if .IsFull}}
            <div class="mt-1 inline-block px-2 py-0.5 rounded-xl bg-yellow-100 text-yellow-800 text-xs">
              Full — waitlist open ({{.Waitlisted}} in queue)
            </div>
          {{else}}
            <div class="mt-1 inline-block px-2 py-0.5 rounded-xl bg-green-100 text-green-800 text-xs">
              Available — {{.Left}} slot{{if ne .Left 1}}s{{end}} left
            </div>
          {{end}}
        </div>
      </label>
      {{end}}
    {{else}}
      <p class="text-gray-600">No upcoming classes yet. Please check again later.</p>
    {{end}}
  </div>
  <button class="px-4 py-2 rounded-xl bg-gray-900 text-white">Confirm</button>
</form>
{{end}}
{{define "parents/select_class.tmpl"}}{{template "base" .}}{{end}}