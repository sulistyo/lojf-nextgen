{{define "content"}}
<h1 class="text-2xl font-bold mb-1">Registration QR</h1>
<p class="text-sm text-gray-600 mb-4">
  Hi, {{.Parent.Name}} <span class="font-mono">({{.Phone}})</span> —
  <a class="underline" href="/account/logout?next=/my">not you? use a different number</a>
</p>

<div class="bg-white border rounded-2xl p-6 max-w-md">
  <div class="mb-2 text-sm text-gray-600">Child</div>
  <div class="mb-3 font-medium">{{.ChildName}}</div>

  <div class="mb-2 text-sm text-gray-600">Class</div>
  <div class="mb-3 font-medium">{{.ClassName}} — {{.DateStr}}</div>

  <div class="mb-2 text-sm text-gray-600">Code</div>
  <div class="mb-4 font-mono">{{.Code}}</div>

  <div class="flex items-center justify-center">
    <img src="{{.QRURL}}" alt="QR {{.Code}}" class="w-64 h-64">
  </div>

  <div class="mt-4 flex gap-3">
    <a class="px-3 py-2 rounded-xl border" href="/my/list">Back to My Registrations</a>
    <a class="px-3 py-2 rounded-xl border" href="{{.QRURL}}" download>Download QR</a>
  </div>
</div>
{{end}}
{{define "parents/my_qr.tmpl"}}{{template "base" .}}{{end}}
