{{define "content"}}
<h1 class="text-2xl font-bold mb-4">Tell Us About You</h1>
<p class="text-sm text-gray-600 mb-3">
  not <span class="font-mono">{{.Phone}}?</span> —
  <a class="underline" href="/switch-number?return=/register">use a different number</a>
</p>
<form method="POST" action="/register/onboard" class="grid gap-4 max-w-lg bg-white p-6 rounded-2xl border">
  <input type="hidden" name="phone" value="{{.Phone}}">
  <div>
    <label class="block text-sm mb-1">Parent Name</label>
    <input name="parent_name" class="w-full rounded-xl border p-2" required>
  </div>
  <div>
    <label class="block text-sm mb-1">Child Name</label>
    <input name="child_name" class="w-full rounded-xl border p-2" required>
  </div>
  <div>
    <label class="block text-sm mb-1">Child Gender</label>
    <select name="child_gender" class="w-full rounded-xl border p-2" required>
      <option value="">Choose…</option>
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>
  </div>  
  <div>
    <label class="block text-sm mb-1">Child Date of Birth</label>
    <input type="date" name="child_dob" class="w-full rounded-xl border p-2" required>
  </div>
  <button class="px-4 py-2 rounded-xl bg-gray-900 text-white">Continue</button>
</form>
{{end}}
{{define "parents/onboard.tmpl"}}{{template "base" .}}{{end}}
