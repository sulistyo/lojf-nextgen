{{define "content"}}
<h1 class="text-2xl font-bold mb-4">Cancel Registration</h1>
{{if .Err}}
  <div class="p-3 bg-red-50 border border-red-200 text-red-700 rounded-xl text-sm mb-3">{{.Err}}</div>
  <form method="GET" action="/cancel" class="bg-white p-4 border rounded-2xl grid gap-3 max-w-md">
    <label class="text-sm">Enter code</label>
    <input name="code" class="rounded-xl border p-2" placeholder="REG-123456">
    <button class="px-4 py-2 rounded-xl bg-gray-900 text-white w-max">Find</button>
  </form>
{{else}}
  <div class="bg-white p-4 border rounded-2xl space-y-2 mb-3">
    <div><span class="text-sm text-gray-600">Code:</span> <span class="font-mono">{{.Code}}</span></div>
    <div><span class="text-sm text-gray-600">Child:</span> <strong>{{.Child}}</strong></div>
    <div><span class="text-sm text-gray-600">Class:</span> <strong>{{.Class}}</strong></div>
    <div><span class="text-sm text-gray-600">Date:</span> <strong>{{.Date}}</strong></div>
    <div><span class="text-sm text-gray-600">Status:</span> <strong>{{.Status}}</strong></div>
    <form method="POST" action="/cancel" class="mt-2">
      <input type="hidden" name="code" value="{{.Code}}">
      <button class="px-4 py-2 rounded-xl bg-gray-900 text-white">Confirm Cancel</button>
    </form>
  </div>
{{end}}
{{end}}
{{define "parents/cancel.tmpl"}}{{template "base" .}}{{end}}