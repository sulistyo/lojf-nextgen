{{define "content"}}
<h1 class="text-2xl font-bold mb-4">Admin • Parents</h1>
{{template "admin_nav" .}}

<form method="GET" class="mb-3">
  <input name="q" value="{{.Q}}" placeholder="Search name or phone…" class="rounded-xl border p-2">
  <button class="px-3 py-2 rounded-xl bg-gray-900 text-white">Search</button>
</form>

<div class="bg-white border rounded-2xl overflow-x-auto">
  <table class="w-full text-sm">
    <thead class="text-left text-gray-500">
      <tr>
        <th class="py-2 px-3">Name</th>
        <th class="py-2 px-3">Phone</th>
        <th class="py-2 px-3">Children</th>
        <th class="py-2 px-3">Upcoming</th>
        <th class="py-2 px-3">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{range .Rows}}
      <tr class="border-t">
        <td class="py-2 px-3">{{.Name}}</td>
        <td class="py-2 px-3 font-mono">{{.Phone}}</td>
        <td class="py-2 px-3">{{.Children}}</td>
        <td class="py-2 px-3">{{.UpcomingRegs}}</td>
        <td class="py-2 px-3"><a class="text-sm underline" href="/admin/parents/{{.ID}}">View</a></td>
      </tr>
      {{end}}
    </tbody>
  </table>
</div>
{{end}}
{{define "admin/parents.tmpl"}}{{template "base" .}}{{end}}
