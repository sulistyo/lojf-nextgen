{{define "content"}}
<h1 class="text-2xl font-bold mb-4">Admin â€¢ Classes</h1>
{{template "admin_nav" .}}

<div class="mb-3">
  <a class="px-3 py-2 rounded-xl bg-gray-900 text-white" href="/admin/classes/new">New Class</a>
</div>

<div class="bg-white border rounded-2xl overflow-x-auto">
  <table class="w-full text-sm">
    <thead class="text-left text-gray-500">
      <tr>
        <th class="py-2 px-3">Date</th>
        <th class="py-2 px-3">Name</th>
        <th class="py-2 px-3">Capacity</th>
        <th class="py-2 px-3">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{range .Classes}}
      <tr class="border-t">
        <td class="py-2 px-3 whitespace-nowrap">{{.Date}}</td>
        <td class="py-2 px-3">{{.Name}}</td>
        <td class="py-2 px-3">{{.Capacity}}</td>
        <td class="py-2 px-3 space-x-3 whitespace-nowrap">
          <a class="text-sm underline" href="/admin/roster?class_id={{.ID}}">Roster</a>
          <a class="text-sm underline" href="/admin/classes/{{.ID}}/edit">Edit</a>
        </td>
      </tr>
      {{end}}
    </tbody>
  </table>
</div>
{{end}}
{{define "admin/classes.tmpl"}}{{template "base" .}}{{end}}