{{define "content"}}
<h1 class="text-2xl font-bold mb-4">Admin • New Class</h1>
{{template "admin_nav" .}}

<form method="POST" action="/admin/classes" class="grid gap-4 max-w-3xl bg-white p-6 rounded-2xl border">

  <!-- Template picker -->
  <div class="flex items-end gap-3">
    <div class="flex-1">
      <label class="block text-sm mb-1">Template (optional)</label>
      <select id="tpl-select" class="w-full rounded-xl border p-2">
        <option value="">— Select a template —</option>
        {{range .Tpls}}
          <option value="{{.ID}}">{{.Name}}</option>
        {{end}}
      </select>
      <p class="text-xs text-gray-500 mt-1">Pick a template to pre-fill name, description, and questions.</p>
    </div>

    <!-- New template link -->
    <div class="pb-2">
      <a href="/admin/templates/new" class="text-sm underline">Create new template</a>
    </div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <label class="block text-sm mb-1">Date</label>
      <input type="date" name="date" class="w-full rounded-xl border p-2" required>
    </div>
    <div>
      <label class="block text-sm mb-1">Capacity</label>
      <input type="number" min="0" name="capacity" class="w-full rounded-xl border p-2" value="25" required>
    </div>
  </div>

  <div>
    <label class="block text-sm mb-1">Name</label>
    <input id="name" name="name" class="w-full rounded-xl border p-2" placeholder="Little Star" required>
  </div>

  <div>
    <label class="block text-sm mb-1">Description</label>
    <textarea id="desc" name="description" class="w-full rounded-xl border p-2" rows="3" placeholder="Optional class description shown to parents"></textarea>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <label class="block text-sm mb-1">Signup opens on (optional)</label>
      <input type="date" name="open_date" class="w-full rounded-xl border p-2" placeholder="YYYY-MM-DD">
    </div>
    <div>
      <label class="block text-sm mb-1">Signup opens at (optional)</label>
      <input type="time" name="open_time" class="w-full rounded-xl border p-2" placeholder="HH:MM">
    </div>
  </div>

  <h2 class="mt-6 font-semibold">Custom Questions</h2>
  <p class="text-xs text-gray-500 mb-2">Add optional questions to ask parents during registration.</p>

  <div id="q-list" class="space-y-3"></div>
  <button type="button" class="mt-2 underline" onclick="addQ()">+ Add question</button>

  <div class="flex gap-2 pt-2">
    <button class="px-4 py-2 rounded-xl bg-gray-900 text-white">Create</button>
    <a href="/admin/classes" class="px-4 py-2 rounded-xl border">Cancel</a>
  </div>
</form>

<script>
  // Build a JS object of templates + questions from server-side data
  const TPLS = {
    {{- range .Tpls }}
    {{.ID}}: {
      name: {{printf "%q" .Name}},
      description: {{printf "%q" .Description}},
      questions: [
        {{- range .Questions }}
        {
          label: {{printf "%q" .Label}},
          kind:  {{printf "%q" .Kind}},       // "text" | "radio"
          required: {{if .Required}}true{{else}}false{{end}},
          options: {{printf "%q" .Options}},  // comma-separated for "radio"
          position: {{.Position}},
        },
        {{- end }}
      ]
    },
    {{- end }}
  };

  let qIndex = 0;

  function addQ(prefill) {
    const i = qIndex++;
    const row = document.createElement('div');
    row.className = 'p-3 border rounded-xl';

    const label   = prefill?.label   || '';
    const kind    = prefill?.kind    || 'text';
    const required= !!prefill?.required;
    const options = prefill?.options || '';

    row.innerHTML = `
      <div class="flex flex-wrap gap-2 items-center">
        <input name="q_label[]" value="${escapeHtml(label)}" placeholder="Question label" class="border rounded-xl px-3 py-2 w-full md:w-1/2" required>
        <select name="q_kind[]" class="border rounded-xl px-3 py-2">
          <option value="text"  ${kind === 'text'  ? 'selected' : ''}>Text input</option>
          <option value="radio" ${kind === 'radio' ? 'selected' : ''}>Multiple choice (radio)</option>
        </select>
        <label class="ml-1 text-sm">
          <input type="checkbox" name="q_required[]" value="${i}" ${required ? 'checked' : ''}> Required
        </label>
        <button type="button" class="ml-auto text-red-600 underline" onclick="this.closest('div.p-3').remove()">Remove</button>
      </div>
      <div class="mt-2">
        <input name="q_options[]" value="${escapeHtml(options)}" placeholder="Choices for radio, comma-separated (e.g., Yes,No)" class="border rounded-xl px-3 py-2 w-full" />
      </div>
    `;
    document.getElementById('q-list').appendChild(row);
  }

  function escapeHtml(s) {
    return (s || '').replace(/[&<>"']/g, c => ({
      '&':'&amp;', '<':'&lt;', '>':'&gt;', '"':'&quot;', "'":'&#39;'
    }[c]));
  }

  function clearFormFields() {
      document.getElementById('name').value = '';
      document.getElementById('desc').value = '';
      const wrap = document.getElementById('q-list');
      wrap.innerHTML = '';
      qIndex = 0;
    }

    document.getElementById('tpl-select').addEventListener('change', (e) => {
      const id = e.target.value;

      // If "— Select a template —", clear everything
      if (!id) {
        clearFormFields();
        return;
      }

      // Otherwise, apply the chosen template
      const t = TPLS[id];
      if (!t) return;

      document.getElementById('name').value = t.name || '';
      document.getElementById('desc').value = t.description || '';

      const wrap = document.getElementById('q-list');
      wrap.innerHTML = '';
      qIndex = 0;
      (t.questions || []).forEach(q => addQ(q));
    });

</script>
{{end}}
{{define "admin/classes_new.tmpl"}}{{template "base" .}}{{end}}
