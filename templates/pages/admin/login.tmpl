{{define "content"}}
<div class="max-w-sm mx-auto bg-white border rounded-2xl p-6">
  <h1 class="text-2xl font-bold mb-4">Admin Login</h1>
  <form method="POST" action="/admin/login" class="grid gap-3">
    <input type="hidden" name="next" value="{{.Next}}">
    <label class="text-sm text-gray-600">Password</label>
    <input name="password" type="password" class="rounded-xl border p-2" autofocus required>
    <button class="px-4 py-2 rounded-xl bg-gray-900 text-white mt-2">Sign in</button>
  </form>
</div>
{{end}}
{{define "admin/login.tmpl"}}{{template "base" .}}{{end}}
